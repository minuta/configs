[user]
	name = minuta
    email = "gammamustang@gmail.com"

[alias]
    # Checkouts
    co = checkout
    cob = checkout -b

    # Commits
    cm = commit -m
    ;ca = !git add -A && git commit -m

    st = status
    br = branch
    
    type = cat-file -t
    dump = cat-file -p

    lg = log --graph --abbrev-commit --decorate --format=format:'%C(dim white)%h%C(reset) - %C(green)(%ar)%C(reset) %C(white)%s%C(reset)  %C(blue) %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    
    # show all files from commit hash (e.g. fi <HASH>)
    ci = show --stat 

    unstage = reset --  
   
    # show changes in fetched commits for a given file:
    sff = diff --name-status HEAD..origin

	dt = difftool

    # -----------------------------------------------------------------------------------------------------------------------------------------------------------

[merge]
    tool = code

[diff]
	tool = code

[color]
	ui = true

[core]
	autocrlf = input
	safecrlf = false

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[difftool]
	prompt = false

[push]
	default = simple

[init]
	defaultBranch = main
